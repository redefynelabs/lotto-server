generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  AGENT
  USER
}

enum SlotType {
  LD
  JP
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum SlotStatus {
  OPEN
  CLOSED
  COMPLETED
  CANCELLED
}

enum WalletTxType {
  BID_CREDIT
  BID_DEBIT

  COMMISSION_CREDIT
  COMMISSION_SETTLEMENT

  WIN_CREDIT
  WIN_SETTLEMENT_ADMIN_TO_AGENT
  WIN_SETTLEMENT_AGENT_TO_USER

  WITHDRAW
}

model AppSettings {
  id                     String   @id @default(uuid())

  slotAutoGenerateCount  Int      @default(7)

  // Default Times 
  defaultLdTimes         String[]
  defaultJpTimes         String[] 
  timezone               String

  defaultCommissionPct   Decimal  @default(10)
  agentNegativeBalanceLimt  Decimal @default(200)

  bidPrizeLD             Decimal  @default(1)
  bidPrizeJP             Decimal  @default(5)

  ldBidLimitPerNumber  Decimal  @default(80)

  winningPrizeLD         Decimal  @default(3300)
  winningPrizeJP         Decimal  @default(10000)

  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
}


model User {
  id   String @id @default(uuid())
  role Role   @default(AGENT)

  firstName    String
  lastName     String
  phone        String    @unique
  email        String?   @unique
  dob          DateTime?
  gender       Gender?
  passwordHash String?

  // AGENT ONLY
  isApproved    Boolean @default(false)
  commissionPct Decimal @default(10)

  // OTP FIELDS (for Agents + Users)
  isPhoneVerified Boolean   @default(false)
  otpCode         String?
  otpExpiry       DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  wallet        Wallet[]
  bids          Bid[]
}

model Wallet {
  id              String    @id @default(uuid())
  user            User      @relation(fields: [userId], references: [id], onDelete: Restrict)
  userId          String    @unique

  // master balance (Decimal)
  totalBalance    Decimal   @default(0)

  // locked amount for winnings (not usable for bidding)
  reservedWinning Decimal   @default(0)

  txs             WalletTx[]

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model WalletTx {
  id            String       @id @default(uuid())
  wallet        Wallet       @relation(fields: [walletId], references: [id], onDelete: Restrict)
  walletId      String

  type          WalletTxType
  amount        Decimal
  balanceAfter  Decimal
  meta          Json?        // { transId, proofUrl, slotId, bidId, adminId, note }
  createdAt     DateTime     @default(now())

  @@index([walletId])
}

model Slot {
  id              String     @id @default(uuid())
  uniqueSlotId    String     @unique
  type            SlotType
  slotTime        DateTime
  windowCloseAt   DateTime
  status          SlotStatus @default(OPEN)
  isAutoGenerated Boolean    @default(true)
  settingsJson    Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bids       Bid[]
  drawResult DrawResult?

  @@index([slotTime, type])
}

/// Only real bids
model Bid {
  id            String   @id @default(uuid())
  user          User     @relation(fields: [userId], references: [id], onDelete: Restrict)
  userId        String

  slot          Slot     @relation(fields: [slotId], references: [id], onDelete: Restrict)
  slotId        String

  uniqueBidId   String   @unique
  customerName  String
  customerPhone String

  // LD fields
  number        Int
  count         Int
  
  // JP fields
  jpNumbers     Int[]

  amount        Decimal

  createdAt     DateTime @default(now())

  @@index([slotId])
}


/// Draw result (with dummy metadata only)
model DrawResult {
  id     String @id @default(uuid())
  slot   Slot   @relation(fields: [slotId], references: [id], onDelete: Restrict)
  slotId String @unique

  winner String // "5" for LD, or JP combo like "1-3-7-12-18-35"

  dummyUnits    Int      @default(0)
  totalUnits    Int?
  perUnitPayout Decimal?
  payoutTotal   Decimal?

  meta Json? // T, U, WU, W, calculations, etc.

  createdAt DateTime @default(now())

  @@index([slotId])
}
