generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  AGENT
  USER
}

enum SlotType {
  LD
  JP
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum SlotStatus {
  OPEN
  CLOSED
  COMPLETED
  CANCELLED
}

model AppSettings {
  id                     String   @id @default(uuid())

  slotAutoGenerateCount  Int      @default(7)

  // Default Times (string array: ["00:00", "12:00", "16:00", "20:00"])
  defaultLdTimes         String[]
  defaultJpTimes         String[] // usually one, e.g. ["18:00"]

  defaultCommissionPct   Decimal  @default(10)

  bidPrizeLD             Decimal  @default(1)
  bidPrizeJP             Decimal  @default(5)

  winningPrizeLD         Decimal  @default(3300)
  winningPrizeJP         Decimal  @default(10000)

  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
}


model User {
  id   String @id @default(uuid())
  role Role   @default(AGENT)

  firstName    String
  lastName     String
  phone        String    @unique
  email        String?   @unique
  dob          DateTime?
  gender       Gender?
  passwordHash String?

  // AGENT ONLY
  isApproved    Boolean @default(false)
  commissionPct Decimal @default(10)

  // OTP FIELDS (for Agents + Users)
  isPhoneVerified Boolean   @default(false)
  otpCode         String?
  otpExpiry       DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  biddingWallet BiddingWallet?
  earningWallet EarningWallet?
  bids          Bid[]
}

/// Settlement wallet (agent ↔ company)
model BiddingWallet {
  id      String  @id @default(uuid())
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId  String  @unique
  balance Decimal @default(0)

  txs       WalletTx[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

/// Commission-only wallet
model EarningWallet {
  id      String  @id @default(uuid())
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId  String  @unique
  balance Decimal @default(0)

  txs       WalletTx[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

/// Wallet ledger
model WalletTx {
  id              String         @id @default(uuid())
  walletType      String // "bidding" or "earning"
  walletId        Int
  type            String // debit | credit | winning | commission | topup | withdraw | admin_adjust
  amount          Decimal
  meta            Json?
  createdAt       DateTime       @default(now())
  biddingWallet   BiddingWallet? @relation(fields: [biddingWalletId], references: [id])
  biddingWalletId String?
  earningWallet   EarningWallet? @relation(fields: [earningWalletId], references: [id])
  earningWalletId String?

  @@index([walletType, walletId])
}

model Slot {
  id              String     @id @default(uuid())
  uniqueSlotId    String     @unique
  type            SlotType
  slotTime        DateTime
  windowCloseAt   DateTime
  status          SlotStatus @default(OPEN)
  isAutoGenerated Boolean    @default(true)
  settingsJson    Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bids       Bid[]
  drawResult DrawResult?

  @@index([slotTime, type])
}

/// Only real bids
model Bid {
  id     String @id @default(uuid())
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String
  slot   Slot   @relation(fields: [slotId], references: [id], onDelete: Cascade)
  slotId String

  uniqueBidId   String  @unique
  customerName  String?
  customerPhone String?

  number Int // 1–37 (LD)
  count  Int
  amount Decimal

  createdAt DateTime @default(now())

  @@index([slotId, number])
}

/// Draw result (with dummy metadata only)
model DrawResult {
  id     String @id @default(uuid())
  slot   Slot   @relation(fields: [slotId], references: [id], onDelete: Cascade)
  slotId String @unique

  winner String // "5" for LD, or JP combo like "1-3-7-12-18-35"

  dummyUnits    Int      @default(0)
  totalUnits    Int?
  perUnitPayout Decimal?
  payoutTotal   Decimal?

  meta Json? // T, U, WU, W, calculations, etc.

  createdAt DateTime @default(now())

  @@index([slotId])
}
